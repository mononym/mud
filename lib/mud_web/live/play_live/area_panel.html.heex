<div class="w-full h-full flex flex-col p-0.5">
  <%# Area Name & Description %>
  <div class="flex">
    <div phx-click="toggle_area_description" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
      <i class={"fas fa-#{if @area_description_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.area_name}"}></i>
    </div>
    <p style={"color:#{@character.settings.colors.area_name}"}>[<%= @area.name %>]</p>
  </div>
  <p class={"ml-1.5 whitespace-pre-wrap #{if @area_description_collapsed, do: "hidden"}"} style={"color:#{@character.settings.colors.area_description}"}><%= @area.description %></p>

  <%# Exits %>
  <div class="flex mt-1">
    <div phx-click="toggle_exits" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
      <i class={"fas fa-#{if @area_exits_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.exit_label}"}></i>
    </div>
    <p style={"color:#{@character.settings.colors.exit_label}"}>Obvious Exits (<%= length(@exits) %>)</p>
  </div>
  <%= if @character.settings.area_window.show_description do %>
    <div class={"pl-1.5 #{if @area_exits_collapsed, do: "hidden"}"}>
      <%= for ex <- @exits do %>
        <p style={"color:#{link_to_color(@character.settings.colors, ex)}"}><%= ex.short_description %> <%= if ex.flags.closable, do: "(#{if ex.closable.open, do: "open", else: "closed"})" %></p>
      <% end %>
    </div>
  <% end %>

  <%# Things of Interest %>
  <%= if @character.settings.area_window.show_toi do %>
    <div class="flex mt-1">
      <div phx-click="toggle_toi" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
        <i class={"fas fa-#{if @area_toi_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.toi_label}"}></i>
      </div>
      <p style={"color:#{@character.settings.colors.toi_label}"}>Things of Interest (<%= length(@things_of_interest) %>)</p>
    </div>
    <div class={"pl-1.5 #{if @area_toi_collapsed, do: "hidden"}"}>
      <%= for item <- @things_of_interest do %>
        <p style={"color:#{item_to_color(@character, item)}"}><%= item.description.short %></p>
      <% end %>
    </div>
  <% end %>

  <%# Items on Ground %>
  <%= if @character.settings.area_window.show_on_ground do %>
    <div class="flex mt-1">
      <div phx-click="toggle_tog" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
        <i class={"fas fa-#{if @area_tog_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.on_ground_label}"}></i>
      </div>
      <p style={"color:#{@character.settings.colors.on_ground_label}"}>On Ground (<%= length(@items_on_ground) %>)</p>
    </div>
    <div class={"pl-1.5 #{if @area_tog_collapsed, do: "hidden"}"}>
      <%= for item <- @items_on_ground do %>
        <p style={"color:#{item_to_color(@character, item)}"}><%= item.description.short %></p>
      <% end %>
    </div>
  <% end %>

  <%# Other Characters %>
  <%= if @character.settings.area_window.show_also_present do %>
    <div class="flex mt-1">
      <div phx-click="toggle_also_present" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
        <i class={"fas fa-#{if @also_present_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.character_label}"}></i>
      </div>
      <p style={"color:#{@character.settings.colors.character_label}"}>Also Present (<%= length(@other_characters) %>)</p>
    </div>
    <div class={"pl-1.5 #{if @also_present_collapsed, do: "hidden"}"}>
      <%= for character <- @characters do %>
        <p style={"color:#{@character.settings.colors.character}"}><%= character.name %></p>
      <% end %>
    </div>
  <% end %>

  <%# Denizens %>
  <%= if @character.settings.area_window.show_denizens do %>
    <div class="flex mt-1">
      <div phx-click="toggle_denizens" phx-throttle="500" phx-target={@myself} class="relative w-1 h-1 mr-0.5 cursor-pointer">
        <i class={"fas fa-#{if @denizens_collapsed, do: "plus", else: "minus"} fa-lg"} style={"color:#{@character.settings.colors.denizen_label}"}></i>
      </div>
      <p style={"color:#{@character.settings.colors.denizen_label}"}>Denizens (<%= length(@denizens) %>)</p>
    </div>
    <div class={"pl-1.5 #{if @denizens_collapsed, do: "hidden"}"}>
      <%= for denizen <- @denizens do %>
        <p style={"color:#{@character.settings.colors.denizen}"}><%= denizen.name %></p>
      <% end %>
    </div>
  <% end %>
</div>
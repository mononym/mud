<div class="flex flex-col bg-gray-900  h-full">
  <div name="hero" class="py-20 flex-grow">
    <div class="container mx-auto px-6 flex flex-col">
      <h2 class="text-4xl font-bold mb-2 mx-auto">
        Enter token provided in email
      </h2>

      <%= f = form_for @changeset, "#", [phx_submit: :validate, class: "w-full max-w-sm mx-auto"] %>
        <div class="flex items-center border-b border-b-2 border-green-500 py-2">
          <%= text_input f, :token, class: "appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none", type: "text", placeholder: "Auth Token"%>
          <%= submit "Validate Token!", phx_disable_with: "Validating Token...", class: "flex-shrink-0 bg-green-900 hover:bg-green-700 border-green-900 hover:border-green-700 text-sm border-4 text-white py-1 px-2 rounded" %>
        </div>

        <%= error_tag f, :email %>
      </form>

    </div>
  </div>
</div>
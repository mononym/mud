<%= tag :meta, name: "character_id", content: @character_id %>

<div name="window" class="min-w-full min-h-full h-full flex">
  <section name="center" class="min-w-full min-h-full h-full flex flex-col">
    <div id="story" phx-hook="Story" class="min-w-full flex flex-col flex-grow justify-end p-2 font-extrabold font-story overflow-y-scroll" phx-window-keyup="hotkey">
    </div>
    <input id="prompt" phx-hook="Input" type="textarea" class="min-w-full rounded-lg resize-y flex-shrink" placeholder="Enter Commands Here..."/>
  </section>
</div>